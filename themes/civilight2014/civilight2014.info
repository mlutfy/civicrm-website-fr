name = CiviLight 2014
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[topnav]         = 'Top Navigation'
regions[header]         = 'Page Header'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Fonts (fontyourface)
;;;;;;;;;;;;;;;;;;;;;

fonts[google_fonts_api][] = "Oswald&subset=latin#700"
fonts[google_fonts_api][] = "Source Sans Pro&subset=latin-ext#300"
fonts[google_fonts_api][] = "Source Sans Pro&subset=latin-ext#700"
fonts[google_fonts_api][] = "Source Sans Pro&subset=latin#italic"
fonts[google_fonts_api][] = "Source Sans Pro&subset=latin-ext#regular"

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = dist/css/bootstrap.min.css
stylesheets[all][] = dist/css/bootstrap-theme.min.css
stylesheets[all][] = dist/font-awesome-4.3.0/css/font-awesome.min.css

stylesheets[all][] = css/style.css

